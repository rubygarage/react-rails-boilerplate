  "paths": {
    "/auth/users/confirmation": {
      "post": {
        "summary": "Confirm user",
        "tags": [
          "Confirmation"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "confirmation_token",
            "in": "query",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "User confirmed"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/auth/users/password": {
      "get": {
        "summary": "Validate reset token (Show Password)",
        "tags": [
          "Password"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "reset_token",
            "in": "query",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Validate reset token"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "post": {
        "summary": "Send confirmation instructions (Create Password)",
        "tags": [
          "Password"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "properties": {
                "email": {
                  "type": "string"
                }
              },
              "required": [
                "email"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Email found"
          },
          "422": {
            "description": "Unprocessable Entity",
            "examples": {
              "application/vnd.api+json": {
                "errors": [
                  {
                    "source": {
                      "pointer": "/data/attributes/email"
                    },
                    "detail": "is in invalid format"
                  }
                ]
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Update Password",
        "tags": [
          "Password"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "properties": {
                "reset_token": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "password_confirmation": {
                  "type": "string"
                }
              },
              "required": [
                "reset_token",
                "password",
                "password_confirmation"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Update user's password",
            "examples": {
              "application/vnd.api+json": {
                "data": {
                  "id": 1,
                  "type": "users",
                  "attributes": {
                    "email": "test@example.com",
                    "username": "new_test_user",
                    "provider": null,
                    "uid": null
                  },
                  "relationships": {
                    "avatar": {
                      "data": null
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "examples": {
              "application/vnd.api+json": {
                "errors": [
                  {
                    "source": {
                      "pointer": "/data/attributes/passwordConfirmation"
                    },
                    "detail": "doesn't match"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "/auth/users/registration": {
      "post": {
        "summary": "Create User Profile (Sign Up)",
        "tags": [
          "Registration"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "properties": {
                "username": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "password_confirmation": {
                  "type": "string"
                }
              },
              "required": [
                "username",
                "email",
                "password",
                "password_confirmation"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User information",
            "examples": {
              "application/vnd.api+json": {
                "data": {
                  "id": 1,
                  "type": "users",
                  "attributes": {
                    "email": "test@example.com",
                    "username": "new_test_user",
                    "provider": null,
                    "uid": null
                  },
                  "relationships": {
                    "avatar": {
                      "data": null
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Invalid request",
            "examples": {
              "application/vnd.api+json": {
                "errors": [
                  {
                    "source": {
                      "pointer": "/data/attributes/email"
                    },
                    "detail": "must be filled"
                  },
                  {
                    "source": {
                      "pointer": "/data/attributes/email"
                    },
                    "detail": "is not unique"
                  },
                  {
                    "source": {
                      "pointer": "/data/attributes/username"
                    },
                    "detail": "must be filled"
                  },
                  {
                    "source": {
                      "pointer": "/data/attributes/username"
                    },
                    "detail": "is not unique"
                  },
                  {
                    "source": {
                      "pointer": "/data/attributes/password"
                    },
                    "detail": "must be filled"
                  },
                  {
                    "source": {
                      "pointer": "/data/attributes/password"
                    },
                    "detail": "size cannot be less than 8"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "/auth/users/session": {
      "get": {
        "summary": "Show User's Info (Session Show)",
        "tags": [
          "Session"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User information",
            "examples": {
              "application/vnd.api+json": {
                "data": {
                  "id": 1,
                  "type": "users",
                  "attributes": {
                    "email": "test@example.com",
                    "username": "new_test_user",
                    "provider": null,
                    "uid": null
                  },
                  "relationships": {
                    "avatar": {
                      "data": {
                        "id": 1,
                        "type": "avatars"
                      }
                    }
                  }
                },
                "included": [
                  {
                    "id": 1,
                    "type": "avatars",
                    "attributes": {
                      "thumbImage": "/path/to/image-thumb.jpg",
                      "originalImage": "/path/to/image.jpg"
                    }
                  }
                ]
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "post": {
        "summary": "Create New User's Session (Log In)",
        "tags": [
          "Session"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "remember": {
                  "type": "boolean"
                }
              },
              "required": [
                "username",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Authorization token"
          },
          "422": {
            "description": "Invalid request",
            "examples": {
              "application/vnd.api+json": {
                "errors": [
                  {
                    "source": {
                      "pointer": "/data/attributes/username"
                    },
                    "detail": "must be filled"
                  },
                  {
                    "source": {
                      "pointer": "/data/attributes/username"
                    },
                    "detail": "invalid credentials"
                  },
                  {
                    "source": {
                      "pointer": "/data/attributes/username"
                    },
                    "detail": "email is not confirmed"
                  },
                  {
                    "source": {
                      "pointer": "/data/attributes/password"
                    },
                    "detail": "must be filled"
                  }
                ]
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/avatar": {
      "delete": {
        "summary": "Delete avatar",
        "tags": [
          "Avatars"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Destroy avatar"
          },
          "401": {
            "description": "You are not authenticated"
          },
          "403": {
            "description": "You don’t have permission to access this resource"
          },
          "404": {
            "description": "Avatar not found"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Show user",
        "tags": [
          "Users"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Show user",
            "examples": {
              "application/vnd.api+json": {
                "data": {
                  "id": 1,
                  "type": "users",
                  "attributes": {
                    "email": "test@example.com",
                    "username": "new_test_user",
                    "provider": null,
                    "uid": null
                  },
                  "relationships": {
                    "avatar": {
                      "data": {
                        "id": 1,
                        "type": "avatars"
                      }
                    }
                  }
                },
                "included": [
                  {
                    "id": 1,
                    "type": "avatars",
                    "attributes": {
                      "thumbImage": "/path/to/image-thumb.jpg",
                      "originalImage": "/path/to/image.jpg"
                    }
                  }
                ]
              }
            }
          },
          "401": {
            "description": "You are not authenticated"
          },
          "403": {
            "description": "You don’t have permission to access this resource"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "post": {
        "summary": "Update",
        "tags": [
          "Users"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Updates user"
          },
          "422": {
            "description": "Error update user"
          }
        }
      }
    }
  },
