    "application/vnd.api+json"
  ],
  "consumes": [
    "application/vnd.api+json"
  ],
  "securityDefinitions": {
    "access_token": {
      "type": "apiKey",
      "in": "header",
      "name": "access-token"
    },
    "token_type": {
      "type": "apiKey",
      "in": "header",
      "name": "token-type"
    },
    "client": {
      "type": "apiKey",
      "in": "header",
      "name": "client"
    },
    "uid": {
      "type": "apiKey",
      "in": "header",
      "name": "uid"
    }
  },
  "security": [
